{
  "name": "charades-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/api & npm run dev --workspace=packages/web",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/web",
    "deploy": "npm run deploy --workspace=packages/api",
    "deploy:api": "npm run deploy --workspace=packages/api",
    "test": "npm run test --workspaces --if-present",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json,md}'"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
